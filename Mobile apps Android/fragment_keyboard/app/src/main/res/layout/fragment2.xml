<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment2"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:id="@+id/root">
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/b1"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="1" />
        <Button
            android:id="@+id/b2"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="2" />
        <Button
            android:id="@+id/b3"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="3" />
        <Button
            android:id="@+id/b4"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="4" />
        <Button
            android:id="@+id/b5"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="5" />
        <Button
            android:id="@+id/b6"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="6" />
        <Button
            android:id="@+id/b7"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="7" />

        <Button
            android:id="@+id/b8"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="8" />
        <Button
            android:id="@+id/b9"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="9" />
        <Button
            android:id="@+id/b0"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="0" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/bq"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="Q" />
        <Button
            android:id="@+id/bw"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="W" />
        <Button
            android:id="@+id/be"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="E" />
        <Button
            android:id="@+id/br"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="R" />
        <Button
            android:id="@+id/bt"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="T" />
        <Button
            android:id="@+id/by"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="Y" />
        <Button
            android:id="@+id/bu"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="U" />
        <Button
            android:id="@+id/bi"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="I" />
        <Button
            android:id="@+id/bo"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="O" />
        <Button
            android:id="@+id/bp"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="P" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/ba"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="A" />
        <Button
            android:id="@+id/bs"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="S" />
        <Button
            android:id="@+id/bd"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="D" />
        <Button
            android:id="@+id/bf"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="F" />
        <Button
            android:id="@+id/bg"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="G" />
        <Button
            android:id="@+id/bh"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="H" />
        <Button
            android:id="@+id/bj"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="J" />
        <Button
            android:id="@+id/bk"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="K" />
        <Button
            android:id="@+id/bl"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="L" />

        <ImageButton
            android:id="@+id/bret"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:backgroundTint="#C3C3C3"
            android:src="@drawable/ret" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/bz"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="Z" />
        <Button
            android:id="@+id/bx"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="X" />
        <Button
            android:id="@+id/bc"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="C" />
        <Button
            android:id="@+id/bv"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="V" />
        <Button
            android:id="@+id/bb"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="B" />
        <Button
            android:id="@+id/bn"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="N" />
        <Button
            android:id="@+id/bm"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="M" />
        <Button
            android:id="@+id/bcomma"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="," />
        <Button
            android:id="@+id/bdot"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="." />
        <Button
            android:id="@+id/bqmark"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="\?" />
    </TableRow>
    <TableLayout tools:ignore="ExtraText">
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*">
        <TableRow>
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/bclear"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:backgroundTint="#C33E3E"
                android:text="CLEAR ALL" />
            <Button
                android:id="@+id/bspace"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="spacebar"
                />
            <Button
                android:id="@+id/bdel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete"
                />
        </TableRow>
    </TableLayout>
</TableLayout>


